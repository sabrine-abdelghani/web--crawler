{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-undef": "error",
    "no-redeclare": "error",
    "no-unused-vars": [
      "off",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false,
        "varsIgnorePattern": "debug"
      }
    ]
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "globals": {
    "it": true
  }
}
